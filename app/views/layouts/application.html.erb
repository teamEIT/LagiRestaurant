<!DOCTYPE html>
<html>
<head>
	<title>LagiRestaurant</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<nav class="navbar navbar-light bg-faded">
	<%= link_to "LagiRes", root_path, class: 'navbar-brand' %>
	<ul class="nav navbar-nav">
		<li class="nav-item <%= 'active' if current_page?(root_path) %>">
			<%= link_to "Home", root_path, class: 'nav-link' %>
		</li>
		<li class="nav-item <%= 'active' if current_page?(menu_path) %>">
			<%= link_to "Menu", menu_index_path, class: 'nav-link' %>
		</li>
		<li class="nav-item <%= 'active' if current_page?(contact_us_path) %>">
			<%= link_to "Contact", contact_us_path, class: 'nav-link' %>
		</li>
	</ul>
	<form class="form-inline pull-xs-right">
		<input class="form-control" type="text" placeholder="Search">
		<button class="btn btn-outline-success" type="submit">Search</button>
	</form>
</nav>
<body>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
